---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import GuideCard from '../components/GuideCard.astro';
export const prerender = false;
---

<Layout>
  <Navbar />

  <main class="font-lato">
    <!-- Hero Section -->
    <section class="text-center py-20">
      <h1 class="text-5xl font-bold font-poppins mb-4">Master New Skills. Practical Guides for Ambitious Kenyans.</h1>
      <p class="text-xl text-gray-600 mb-8">Your one-stop shop for high-quality, locally-relevant how-to guides.</p>
      <a href="/guides" class="bg-accent text-white font-bold py-4 px-8 rounded-full hover:bg-accent/90 text-xl">Explore All Guides</a>
    </section>

    <!-- Featured Guides Section -->
    <section class="py-20 bg-background">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12 font-poppins">Trending Now</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <GuideCard
            title="How to Start a Successful Blog in Kenya"
            price={2500}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Blog"
          />
          <GuideCard
            title="A Beginner's Guide to Investing in the NSE"
            price={4000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=NSE"
          />
          <GuideCard
            title="Mastering M-Pesa for Business Transactions"
            price={1500}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=M-Pesa"
          />
          <GuideCard
            title="The Ultimate Guide to Jumia & Jiji"
            price={3000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Jumia"
          />
        </div>
      </div>
    </section>
  </main>

  <footer class="text-center py-4">
    <p>&copy; {new Date().getFullYear()} HowToKE. All rights reserved.</p>
  </footer>
</Layout>