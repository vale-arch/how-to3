---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import GuideCard from '../components/GuideCard.astro';
import { supabase } from '../lib/supabase';

const { data: guides, error } = await supabase.from('guides').select('*');

if (error) {
  console.error('Error fetching guides:', error);
  // Optionally, render an error message
}
---

<Layout>
  <Navbar />

  <main class="container mx-auto px-4 py-12 font-lato">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold font-poppins">All How-To Guides</h1>
      <a href="/upload" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600">Upload Guide</a>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Filters Sidebar -->
      <aside class="lg:col-span-1">
        <h2 class="text-2xl font-bold font-poppins mb-4">Filter by Category</h2>
        <div class="space-y-2">
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="business">
            <span class="ml-2">Business</span>
          </label>
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="technology">
            <span class="ml-2">Technology</span>
          </label>
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="finance">
            <span class="ml-2">Finance</span>
          </label>
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="lifestyle">
            <span class="ml-2">Lifestyle</span>
          </label>
        </div>
      </aside>

      <!-- Guides Grid -->
      <section class="lg:col-span-3">
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-8">
          {guides && guides.map(guide => (
            <GuideCard
              title={guide.title}
              price={guide.price}
              imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Guide"
            />
          ))}
        </div>
      </section>
    </div>
  </main>

  <footer class="text-center py-4 mt-12">
    <p>&copy; {new Date().getFullYear()} HowToKE. All rights reserved.</p>
  </footer>
</Layout>
