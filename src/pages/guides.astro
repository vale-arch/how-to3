---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import GuideCard from '../components/GuideCard.astro';
---

<Layout>
  <Navbar />

  <main class="container mx-auto px-4 py-12 font-lato">
    <h1 class="text-4xl font-bold font-poppins mb-8">All How-To Guides</h1>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Filters Sidebar -->
      <aside class="lg:col-span-1">
        <h2 class="text-2xl font-bold font-poppins mb-4">Filter by Category</h2>
        <div class="space-y-2">
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="business">
            <span class="ml-2">Business</span>
          </label>
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="technology">
            <span class="ml-2">Technology</span>
          </label>
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="finance">
            <span class="ml-2">Finance</span>
          </label>
          <label class="flex items-center">
            <input type="checkbox" class="form-checkbox" name="category" value="lifestyle">
            <span class="ml-2">Lifestyle</span>
          </label>
        </div>
      </aside>

      <!-- Guides Grid -->
      <section class="lg:col-span-3">
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-8">
          <GuideCard
            title="Guide 1"
            price={1000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Guide+1"
          />
          <GuideCard
            title="Guide 2"
            price={2000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Guide+2"
          />
          <GuideCard
            title="Guide 3"
            price={3000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Guide+3"
          />
          <GuideCard
            title="Guide 4"
            price={4000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Guide+4"
          />
          <GuideCard
            title="Guide 5"
            price={5000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Guide+5"
          />
          <GuideCard
            title="Guide 6"
            price={6000}
            imageUrl="https://placehold.co/600x400/36454F/F5F5F5?text=Guide+6"
          />
        </div>
      </section>
    </div>
  </main>

  <footer class="text-center py-4 mt-12">
    <p>&copy; {new Date().getFullYear()} HowToKE. All rights reserved.</p>
  </footer>
</Layout>
