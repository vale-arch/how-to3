<nav class="bg-white shadow-md font-poppins">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary">HowToKE</a>
      </div>
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a href="/guides" class="text-primary hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Guides</a>
          <a href="/blog" class="text-primary hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">Blog</a>
          <a href="/about" class="text-primary hover:bg-gray-200 px-3 py-2 rounded-md text-sm font-medium">About Us</a>
          <a href="/login" class="bg-accent hover:bg-accent/90 text-white px-3 py-2 rounded-md text-sm font-medium">Login</a>
        </div>
      </div>
      <div class="-mr-2 flex md:hidden">
        <button type="button" class="bg-white inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/guides" class="text-primary block px-3 py-2 rounded-md text-base font-medium">Guides</a>
      <a href="/blog" class="text-primary block px-3 py-2 rounded-md text-base font-medium">Blog</a>
      <a href="/about" class="text-primary block px-3 py-2 rounded-md text-base font-medium">About Us</a>
      <a href="/login" class="bg-accent hover:bg-accent/90 text-white block px-3 py-2 rounded-md text-base font-medium">Login</a>
    </div>
  </div>
</nav>

<script>
  const btn = document.querySelector("button[aria-controls='mobile-menu']");
  const menu = document.querySelector("#mobile-menu");
  const svgs = btn.querySelectorAll("svg");

  btn.addEventListener("click", () => {
    const isExpanded = btn.getAttribute("aria-expanded") === "true";
    btn.setAttribute("aria-expanded", !isExpanded);
    menu.classList.toggle("hidden");
    svgs[0].classList.toggle("hidden");
    svgs[0].classList.toggle("block");
    svgs[1].classList.toggle("hidden");
    svgs[1].classList.toggle("block");
  });
</script>
