---
export interface Props {
  title: string;
  price: number;
  imageUrl: string;
}

const { title, price, imageUrl } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden font-lato">
  <img class="w-full h-48 object-cover" src={imageUrl} alt={title}>
  <div class="p-6">
    <h3 class="text-xl font-poppins font-bold mb-2">{title}</h3>
    <p class="text-accent font-bold mb-4">KES {price}</p>
    <a href="#" class="bg-primary text-white font-bold py-2 px-4 rounded hover:bg-primary/90">
      View Guide
    </a>
  </div>
</div>
